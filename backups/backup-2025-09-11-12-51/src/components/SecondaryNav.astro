---
// SecondaryNav.astro
// This component creates a secondary navigation bar with Home and Blog links
// plus the current blog post title when viewing a blog post

interface Props {
  currentTitle?: string;
}

const { currentTitle } = Astro.props;
---

<div class="secondary-nav">
  <div class="secondary-nav-container">
    <div class="secondary-nav-links">
      <a href="https://www.airfryerrecipe.co.uk/" class="secondary-nav-link">Home</a>
      <span class="secondary-nav-separator" aria-hidden="true">|</span>
      
      {currentTitle === "Blog" ? (
        <span class="secondary-nav-current">Blog</span>
      ) : (
        <>
          <a href="/blog" class="secondary-nav-link">Blog</a>
          {currentTitle && (
            <>
              <span class="secondary-nav-separator" aria-hidden="true">|</span>
              <span class="secondary-nav-current">{currentTitle}</span>
            </>
          )}
        </>
      )}
    </div>
  </div>
</div>

<style>
  .secondary-nav {
    background-color: var(--color-background); /* revert: page section background unchanged */
    border-bottom: none; /* No long border line below */
    padding: 6px 0; /* compact height */
  }

  .secondary-nav-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: flex-start;
  }

  .secondary-nav-links {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    font-family: 'Open Sans', Arial, Helvetica, sans-serif;
    font-weight: 400;
    font-size: 13px;
    line-height: 20px;
    color: rgba(51, 51, 51, 0.7);
  }

  .secondary-nav-link {
    color: rgba(51, 51, 51, 0.7);
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    padding: 0 15px; /* 15px left and right inside each pill */
    border-radius: 8px; /* rounded pill */
    background-color: rgba(226, 226, 226, 0.3);
    border: 0.2px solid transparent; /* 0.2 width, transparent colour */
  }

  .secondary-nav-link:hover { text-decoration: underline; }

  .secondary-nav-separator {
    color: #333;
    opacity: 0.06; /* 6% */
    padding-bottom: 5px; /* internal bottom padding 5px */
    font-family: 'Open Sans', Arial, Helvetica, sans-serif;
    font-weight: 400;
    font-size: 25px;
    line-height: 20px;
    display: inline-block;
  }

  .secondary-nav-current {
    color: rgba(51, 51, 51, 0.7);
    display: inline-flex;
    align-items: center;
    padding: 0 15px; /* 15px left and right inside the pill */
    border-radius: 8px; /* rounded pill */
    background-color: rgba(226, 226, 226, 0.3);
    border: 0.2px solid transparent; /* 0.2 width, transparent colour */
  }

  @media (max-width: 768px) {
    .secondary-nav-container { padding: 0 1rem; }
    .secondary-nav-links { font-size: 13px; }
  }
</style>